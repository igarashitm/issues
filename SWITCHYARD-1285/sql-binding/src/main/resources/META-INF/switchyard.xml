<switchyard xmlns="urn:switchyard-config:switchyard:1.0">

    <composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912" name="camel-sql-binding"
        targetNamespace="urn:switchyard-issues:switchyard-1285:sql-binding:0.1.0">

        <service name="GreetingService" promote="GreetingService/GreetingService">
            <binding.jms xmlns="urn:switchyard-component-camel-jms:config:1.0">
                <queue>GreetingServiceQueue</queue>
                <connectionFactory>#JmsXA</connectionFactory>
                <transacted>true</transacted>
                <transactionManager>#jtaTransactionManager</transactionManager>
            </binding.jms>
        </service>

        <reference name="GreetingStoreService" multiplicity="0..1" promote="GreetingService/GreetingStoreService">
            <binding.sql xmlns="urn:switchyard-component-camel-sql:config:1.0">
                <query>insert into events (sender,receiver,createdAt) values (#,#,now())</query>
                <dataSourceRef>java:jboss/datasources/GreetXADS</dataSourceRef>
            </binding.sql>
        </reference>

        <reference name="AnotherTransactionStoreService" multiplicity="0..1" promote="AnotherTransactionService/AnotherTransactionStoreService">
            <binding.sql xmlns="urn:switchyard-component-camel-sql:config:1.0">
                <query>insert into events2 (sender,receiver,createdAt) values (#,#,now())</query>
                <dataSourceRef>java:jboss/datasources/Greet2XADS</dataSourceRef>
            </binding.sql>
        </reference>
        
        <component name="GreetingService">
            <implementation.bean xmlns="urn:switchyard-component-bean:config:1.0" class="org.switchyard.issues.SWITCHYARD1285.sql.GreetingServiceBean"/>
            <service name="GreetingService" requires="propagatesTransaction">
                <interface.java interface="org.switchyard.issues.SWITCHYARD1285.sql.GreetingService"/>
            </service>
            <reference name="GreetingStoreService" requires="propagatesTransaction">
                <interface.java interface="org.switchyard.issues.SWITCHYARD1285.sql.StoreService"/>
            </reference>
            <reference name="AnotherTransactionService" requires="suspendsTransaction">
                <interface.java interface="org.switchyard.issues.SWITCHYARD1285.sql.StoreService"/>
            </reference>
        </component>
        <component name="AnotherTransactionService">
            <implementation.bean xmlns="urn:switchyard-component-bean:config:1.0" class="org.switchyard.issues.SWITCHYARD1285.sql.AnotherTransactionServiceBean" requires="managedTransaction.Global"/>
            <service name="AnotherTransactionService" requires="suspendsTransaction">
                <interface.java interface="org.switchyard.issues.SWITCHYARD1285.sql.StoreService"/>
            </service>
            <reference name="AnotherTransactionStoreService" requires="propagatesTransaction">
                <interface.java interface="org.switchyard.issues.SWITCHYARD1285.sql.Store2Service"/>
            </reference>
        </component>
    </composite>
