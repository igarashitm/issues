<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:camel="urn:switchyard-component-camel:config:2.0" xmlns:mail="urn:switchyard-component-camel-mail:config:2.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:sy="urn:switchyard-config:switchyard:2.0" name="switchyard-mail-header" targetNamespace="urn:com.example.switchyard.mail.header:switchyard-mail-header:1.0">
  <sca:composite name="switchyard-mail-header" targetNamespace="urn:com.example.switchyard.mail.header:switchyard-mail-header:1.0">
    <sca:component name="Component">
      <camel:implementation.camel>
        <camel:xml path="route.xml"/>
      </camel:implementation.camel>
      <sca:service name="LogService">
        <sca:interface.java interface="com.example.switchyard.mail.header.LogService"/>
      </sca:service>
    </sca:component>
    <sca:service name="LogService" promote="Component/LogService">
      <sca:interface.java interface="com.example.switchyard.mail.header.LogService"/>
      <mail:binding.mail name="mail1" secure="true">
        <mail:contextMapper includes=".*"/>
        <mail:host>imap.gmail.com</mail:host>
        <mail:username>testaccount</mail:username>
        <mail:password>testpassword</mail:password>
        <mail:consume accountType="imap">
          <mail:folderName>inbox</mail:folderName>
          <mail:delete>true</mail:delete>
        </mail:consume>
      </mail:binding.mail>
    </sca:service>
  </sca:composite>
  <sy:domain>
    <sy:properties>
      <sy:property name="org.switchyard.handlers.messageTrace.enabled" value="true"/>
    </sy:properties>
  </sy:domain>
</sy:switchyard>
